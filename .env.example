# JasperReports MCP Server Configuration
# Copy this file to .env and update with your values

# Required: JasperReports Server Connection
JASPER_URL=http://localhost:8080/jasperserver
JASPER_USERNAME=jasperadmin
JASPER_PASSWORD=jasperadmin

# Optional: Authentication Settings
JASPER_AUTH_TYPE=basic
JASPER_ORGANIZATION=

# Optional: Connection Settings
JASPER_TIMEOUT=30000
JASPER_SSL_VERIFY=false

# Optional: Debug and Development
JASPER_DEBUG_MODE=false
JASPER_LOG_LEVEL=info

# Optional: Resilience Settings
JASPER_RETRY_ATTEMPTS=3
JASPER_MAX_CONNECTIONS=10
JASPER_MAX_QUEUE_SIZE=100
JASPER_MAX_FILE_SIZE=104857600
JASPER_MAX_TOTAL_MEMORY=524288000
JASPER_HEALTH_CHECK_INTERVAL=30000

# Optional: Test Server Settings
TEST_SERVER_ENABLED=false
TEST_SERVER_PORT=3000

# Node.js Environment
NODE_ENV=development

# CI/CD Note: In CI environments, set these as secrets:
# - JASPER_URL
# - JASPER_USERNAME  
# - JASPER_PASSWORD